<% for(var i = 0;i < result.length;i++){ %>
<form id="A2Form2" action="">
    <div class="mdl-grid">
        <div class="mdl-layout-spacer"></div>
        <div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--8-col">
            <div class="mdl-card__title">
                <h1 class="mdl-card__title-text"><input type="hidden" name="oldname"
                    value="<%= result[i].name %>"><%= result[i].name %></h1>
            </div>
            <div class="mdl-card__supporting-text scrollable">
                <div class="mdui-table-fluid">
                    <table class="mdui-table">
                        <thead>
                            <tr>
                                <td>Name</td>
                                <td>Permission</td>
                                <td>New Password</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><input class="mdl-textfield__input" type="text" name="name" value=<%= result[i].name %>></td>
                                <td>
                                    <select class="mdui-select" name="permission" >
                                        <% if(result[i].permission === 1){ %>
                                    <option value="1" selected>Volunteer Judge</option>
                                        <option value="2">Expert Judge</option>
                                        <% }else{ %>
                                    <option value="1">Volunteer Judge</option>
                                        <option value="2" selected>Expert Judge</option>
                                        <% } %>
                                    </select>
                                </td>
                                <td>
                                    <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" type="button" id="resetPasswordButton" onclick="resetPassword()">
                                        Reset Password
                                    </button>
                                    <div id="hiddenResetPwd" style="display: none">
                                        <input class="mdl-textfield__input" type="password" id="password" name="password" placeholder="New Password">
                                    </div>
                                </td>
                            </tr>
<!--                            <tr>-->
<!--                                <td>-->
<!--                                    <input type="checkbox" id="resetPwd" name="resetPwd">reset password-->
<!--                                </td>-->

<!--                            </tr>-->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="mdl-card__actions">
                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                Confirm
                </button>
            </div>
        </div>
        <div class="mdl-layout-spacer"></div>
    </div>
</form>
<% } %>