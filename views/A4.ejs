<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/mdui/0.4.2/css/mdui.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/mdui/0.4.2/js/mdui.min.js"></script>
    <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
    <script src="/javascripts/getA4Data.js"></script>
    <meta charset="UTF-8">
    <title>admin</title>
    <link rel="icon" href="/images/title-logo.png" sizes="32x32">

</head>
<body>
<!-- Simple header with scrollable tabs. -->
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header mdl-layout--no-drawer-button">
    <header class="mdl-layout__header">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <div class="mdl-layout__header-row">
            <!-- Title -->
            <span class="mdl-layout-title">ADMIN</span>
            <div class="mdl-layout-spacer"></div>
            <!--navigation bar-->
            <nav class="mdl-navigation">
                <a class="mdl-navigation__link" href=""><i class="material-icons">account_circle</i> <%- aresult.name %>
                </a>
                <a class="mdl-navigation__link" href="/login"><i class="material-icons">power_settings_new</i> Sign out
                </a>
            </nav>
        </div>
        <!-- Tabs -->
        <div class="mdl-layout__tab-bar mdl-js-ripple-effect">
            <a href="../A1" class="mdl-layout__tab">team management</a>
            <a href="../A2" class="mdl-layout__tab">judge management</a>
            <a href="../A3" class="mdl-layout__tab">administrator management</a>
            <a href="#scroll-tab-3" class="mdl-layout__tab is-active">competition management</a>
        </div>
    </header>
    <!--drawer-->

    <main class="mdl-layout__content">
        <input type="hidden" name="adminNum" value="4">
        <section class="mdl-layout__tab-panel is-active" id="scroll-tab-4">
            <div class="page-content">
                <form id="stopChallengeForm">
                    <div class="mdl-grid">
                        <div class="mdl-layout-spacer"></div>
                        <div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--4-col">
                            <div class="mdl-card__title">
                                <h1 class="mdl-card__title-text">Stop Challenges</h1>
                            </div>
                            <div class="mdl-card__supporting-text scrollable">
                                <table style="width: 100%">
                                    <tr>
                                        <td style="width: 100%; text-align: center">
                                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label"
                                                 style="width: 100%;">
                                                <select class="mdl-textfield__input" id="challengeName" name="name">
                                                    <% for(var i = 0;i < cresult.name.length;i++){ %>
                                                    <option><%- cresult.name[i] %></option>
                                                    <% } %>
                                                </select>
                                                <label class="mdl-textfield__label"
                                                       for="challengeName">Challenge</label>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="mdl-card__actions mdl-card--border">
                                <button type="submit"
                                        class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                                    Stop
                                </button>
                            </div>
                        </div>
                        <div class="mdl-layout-spacer"></div>
                    </div>
                </form>
                <form id="challengeTimetableForm">
                    <div class="mdl-grid">
                        <div class="mdl-layout-spacer"></div>
                        <div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--8-col">
                            <div class="mdl-card__title">
                                <h1 class="mdl-card__title-text">Challenge Timetable</h1>
                            </div>
                            <div class="mdl-card__supporting-text scrollable">
                                <div class="mdui-table-fluid">
                                    <table class="mdui-table" style="width: 100%">
                                        <thead>
                                        <tr>
                                            <th>Challenge</th>
                                            <th>Date</th>
                                            <th>Start Time</th>
                                            <th>End Time</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <% for(var i = 0;i < 7;i++){ %>
                                        <tr>
                                            <td><%- cresult.name[i] %></td>
                                            <td><input type="date" name="date" value=<%- cresult.date[i] %>></td>
                                            <td><input type="time" name="start" value=<%- cresult.start[i] %>></td>
                                            <td><input type="time" name="end" value=<%- cresult.end[i] %>></td>
                                        </tr>
                                        <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="mdl-card__actions mdl-card--border">
                                <button type="submit"
                                        class="mdl-button mdl-button&#45;&#45;colored mdl-js-button mdl-js-ripple-effect">
                                    Confirm
                                </button>
                            </div>
                        </div>
                        <div class="mdl-layout-spacer"></div>
                    </div>
                </form>

                <!-- judge management goes here -->
                <!-- judge management goes here -->
                <!-- judge management goes here -->

            </div>
        </section>
        <footer class="mdl-mini-footer">
            <div class="mdl-mini-footer__left-section">
                <div class="mdl-logo"><a href="/privacy">Privacy & Terms</a></div>
            </div>
        </footer>
    </main>
</div>
</body>
</html>